
<div class="form-group ">
    <label for="title">Title</label>
    <input required  value="<%= obj.title %>" type="text" name="title" id="title" class="form-control border border-secondary">
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea required name="description" id="description" class="form-control border border-secondary"><%= obj.description %></textarea>
</div>
<div class="form-group">
    <label for="content">Content</label>
    <textarea  required name="content" id="content" class="form-control border border-secondary" rows="7"><%= obj.content %></textarea>
</div>
<div class="form-group">
    <label for="author">Author</label>
    <input  required value="<%= obj.author %>" type="text" name="author" id="author" class="form-control border border-secondary">
</div>
<a  class="btn btn-secondary" href="/">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>